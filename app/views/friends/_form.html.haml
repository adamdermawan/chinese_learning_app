= form_with(model: friend) do |form|
  - if friend.errors.any?
    %div{:style => "color: red"}
      %h2
        = pluralize(friend.errors.count, "error")
        prohibited this friend from being saved:
      %ul
        - friend.errors.each do |error|
          %li= error.full_message
  %div{:id => "input_firstname"}
    = form.label :first_name, style: "display: block", class:"form-label"
    = form.text_field :first_name, class:"form-control"
  %div{:id => "input_lastname"}
    = form.label :last_name, style: "display: block", class:"form-label"
    = form.text_field :last_name, class:"form-control"
  %div{:id => "input_email"}
    = form.label :email, style: "display: block", class:"form-label"
    = form.text_field :email , class:"form-control"
  %div{:id => "input_phone"}
    = form.label :phone, style: "display: block" , class:"form-label"
    = form.text_field :phone , class:"form-control"
  %div{:id => "input_twitter"}
    = form.label :twitter, style: "display: block" , class:"form-label"
    = form.text_field :twitter , class:"form-control"
  %div{:id => "submit_friends"}
    = form.submit

-# %div{:id => "#{dom_id friend}"}
%div{:id => "table"}
  %table.table.table-hover
    %thead.table-dark
      %tr
        %th#first_name First Name
        %th#last_name Last Name
        %th#email Email
        %th#phone Phone
        %th#twitter Twitter
        %th
        %th
    %tbody
      %tr
        %td= friend.first_name
        %td= friend.last_name
        %td= friend.email
        %td= friend.phone
        %td= friend.twitter
        %td= button_to "Delete", @friend, method: :delete,form: { data: { turbo_confirm: "Are you sure?" } }  ,  class: "btn btn-outline-danger btn-sm"
